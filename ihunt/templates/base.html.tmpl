<script type="text/javascript" src="inc/js/jquery.progressbar.min.js"></script>
<script type="text/javascript" src="inc/js/jquery-ui-1.8.17.custom.min.js"></script>
<script type="text/javascript" src="inc/js/jquery.uniform.js"></script>
<script type="text/javascript" src="inc/js/customSelect.jquery.js"></script>

